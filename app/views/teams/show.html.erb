<h1><%= @team %></h1>

<% content_for :refresh_tag do %> 
  <meta http-equiv="refresh" content="<%= @team.game ? '10' : '5' %>"/>
<% end %>

<% if @team.game %>
  <% if current_game.winning_team %>
    <% if current_game.winning_team == current_team %>
      <h1>YOU WIN!</h1>
    <% else %>
      <h1>YOU LOSE!</h1>
    <% end %>
  <% else %>
    <% if @team.turn > 1 %>
      <h1>CORRECT!</h1>
    <% end %>
    <h2>FIGHTING AGAINST <%= @team.opponent %></h2>
    <p>Player <%= @team.turn %> is up.</p>
    <p>DRINK AND THEN <%= link_to 'FUCKING CLICK HERE', flip_path(@team.flip) %>.</p>
  <% end %>
<% else %>
  <h2>Waiting for an opponent...</h2>
<% end %>
